<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Model="clr-namespace:Chat.Model">
    <DataTemplate x:Key="UserTemplate" DataType="Model:User">
        <Grid Name="Grid" Height="40" Width="190">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Name="Border" Background="Transparent" CornerRadius="3" Grid.ColumnSpan="3"/>
            <Image Source="{Binding UserPicture}" Height="30" Width="30" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Content="{Binding Name}" Foreground="LightGray" Height="30" Width="130" Grid.Column="2" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Grid>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding IsMouseOver, ElementName=Grid}" Value="true">
                <Setter TargetName="Border" Property="Background" Value="#5a5a5a"/>
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>
</ResourceDictionary>